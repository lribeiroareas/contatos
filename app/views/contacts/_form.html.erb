<%= form_with(model: contact, local: true, multipart:true) do |form| %>
    <% if contact.errors.any? %>
      <div class="alert alert-danger mt-2">
        <h4>Erros ocorreram ao tentar salvar esse contato:</h4>
  
        <ul>
          <% contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group col-md-5 col-sm-9">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group col-md-5 col-sm-9">
      <%= form.label :primary_email %>
      <%= form.text_field :primary_email, class: "form-control" %>
    </div>

    <div class="form-group col-md-5 col-sm-9">
      <%= form.label :secondary_email %>
      <%= form.text_field :secondary_email, class: "form-control" %>
    </div>    

    <div class="form-group col-md-5 col-sm-9">
      <%= form.label :primary_phone %>
      <%= form.text_field :primary_phone, class: "form-control" %>
    </div>    

    <div class="form-group col-md-5 col-sm-9">
      <%= form.label :secondary_phone %>
      <%= form.text_field :secondary_phone, class: "form-control" %>
    </div>    

    <div class="form-group col-md-5 col-sm-9">
      <%= form.label :linkedin %>
      <%= form.text_field :linkedin, class: "form-control" %>
    </div>    

    <div class="form-group col-md-5 col-sm-9">
      <%= form.label :address %>
      <%= form.text_field :address, class: "form-control" %>
    </div>        

    <div class="form-group col-md-5">
      <%= form.label :birth_date %><br>
      <div class="form-row">
        <%= form.date_select :birth_date, { start_year: 1900, end_year: 2040, use_month_numbers: true, order: [:day, :month, :year] } , class: "form-control ml-2 col-3 col-sm-3 col-md-3 col-lg-3 col-xl-3" %>
      </div>
    </div>

    <div class="form-group col-md-5 col-sm-9">
      <%= form.label :photo %>
      <%= form.file_field :photo, class: "form-control" %>
    </div>

    <div class="form-group col-md-5 col-sm-9">
      <%= form.label :notes %>
      <%= form.text_area :notes, rows: "4", class: "form-control" %>
    </div>

    <div class="form-group col-md-5 col-sm-9">
      <%= form.submit "Cadastrar Contato", class: "btn btn-dark" %>
      <%= link_to 'Voltar', contacts_path, class: "btn btn-secondary" %>      
    </div>
  <% end %>